{% container 'mainNav' %}
    {#Content of this container is defined by menu widget which is linked to it. Template used for this menu is widgets/menu1.html.twig  #}
{% endcontainer %}

{# Trending topics is array of first in a row keyword of three latest articles #}
{% cache 'subMenu' { time:0 } %}
    {% set trendingTopics = [] %}
    {% set i = 0 %}
    {% gimmelist article from articles|order('publishedAt','desc')|limit(3) ignoreContext %}
        {% for keyword in article.keywords %}
            {% if loop.first and (keyword not in trendingTopics) %}
                {% set trendingTopics = trendingTopics|merge([keyword]) %}
                {% set i = i+1 %}
            {% endif %}
        {% endfor %}
    {% endgimmelist %}

    {% if i > 0 %}
        <div class="trendingTopics my-0">
            <div class="container">
                <div class="okayNav-header">
                    <nav role="navigation" id="topics" class="okayNav">
                        <ul class="trendingTopics__items">
                            <li>Trending topics</li>
                            {% for topic in trendingTopics %}
                                <li><a href="{{ url('trending') }}?topic={{ topic|lower }}">{{ topic }}</a></li>
                            {% endfor %}
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    {% endif %}

{% endcache %}

